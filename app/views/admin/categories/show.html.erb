<div class="card card-standard">
  <div class="card-header">
    <div>
      <p><%= link_to "Back", categories_path%>
      <h1 class="cme-40">Category Details</h1></p>
    </div>
  </div>

  <div class="card-body">
    <div class="d-flex justify-content-between">
      <div>
        <h2><%= @category.name %></h2>


      </div>
      <div>
        <p><%= link_to "Edit", edit_admin_category_url(@category)%></p>
        <p><%= link_to "Delete", admin_category_url(@category), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %></p>
      </div>
    </div>
  </div>
</div>