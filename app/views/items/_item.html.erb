<h3><%= link_to item.name, item_path(item) %></h3>

<p>Price: <%= item.price %></p>
<p>phone: <%= item.phone %></p>
<div>
  <% if item.images.attached? %>
    <% item.images.each do |image| %>
      <%= image_tag image, alt: "Item Image", class: "preview-image" %>
    <% end %>
  <% end %>
</div>
<hr>
  