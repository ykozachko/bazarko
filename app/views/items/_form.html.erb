<%= form_with model: item do |f| %>

  <div>
  <%= f.label :name%>
  <%= f.text_field :name%>
  </div>

  <div>
  <%= f.label :price%>
  <%= f.text_field :price%>
  </div>

  <div>
  <%= f.label :category_id %>
  <%= f.select :category_id, Category.all.map { |c| [c.name, c.id ]} %>
  </div>

  <%= f.submit %>

<% end %>